<!DOCTYPE html>
<html lang="en">
 
<head>
  
    <% include ./partials/head %>
</head>
 
<body>
<header>
        <% include ./partials/header %>
</header>


<main>
    
    <div class="container">
            <div class="col-sm-6 col-sm-offset-3">
            
                    <h1><span class="fa fa-sign-in"></span> Signup</h1>
                  
                
                    <!-- LOGIN FORM -->
                    <form action="/signup" method="post" class="register-form">
                        <div class="form-group">
                            <label for="name">Nama</label>
                            <input type="text"  class="form-control"name="nama" id="nama" placeholder="Name">
                        </div>
                        <div class="form-group">
                            <label for="email">NRP</label>
                            <input type="text" class="form-control" name="nrp" id="nrp" placeholder="NRP">
                        </div>
                        <div class="form-group">
                                <label for="pass">Password</label>
                                <input type="password" class="form-control" name="password" id="password" placeholder="Password">
                            </div>
                
                        <button type="submit" class="btn btn-warning btn-lg" value="Register">Signup</button>
                    </form>
                
                    <hr>
                
                    <p>Already have an account? <a href="/">Login</a></p>
                   
               
            
               
            
            </div>
    </div>


</main>

<footer>
        <% include ./partials/footer %>
</footer>


